<body>

    <header class="header">
        <div class="container">
            <div class="header-main">
                <a class="header-logo" href="/">
                    <img class="img-fluid" src="/assets/img/logo_not_slogan.png">
                    <img class="img-fluid" src="/assets/img/logo.png">
                </a>
                <div class="header-search">
                    <form action="">
                        <div class="input-group">
                            <button class="btn btn-outline-secondary" type="submit"><i
                                    class="fas fa-search"></i></button>
                            <input class="form-control" type="text" placeholder="Nhập từ khóa tìm kiếm" name="keyword">
                        </div>
                    </form>
                </div>
                <div class="header-control">
                    <div class="announce">
                        <a href="">
                            <div class="icon">
                                <i class="fa-solid fa-bell"></i>
                            </div>
                            <div class="text">
                                Thông báo
                            </div>
                        </a>
                    </div>
                    <div class="cart">
                        <a href="/cart">
                            <div class="icon">
                                <i class="fa-solid fa-cart-shopping"></i>
                                <span id="cartNumStr" class="cart-number">{{lcTotalInCart}}</span>
                                <input type="hidden" id="cartNum" value="{{lcTotalInCart}}">
                            </div>
                            <div class="text">
                                Giỏ hàng
                            </div>
                        </a>
                    </div>
                    <div class="login">
                        {{#if lcAuthUser}}
                        <div class="dropdown-info">

                            <button class="btn btn-default dropdown-toggle" type="button" id="dropdown-information"
                                data-bs-toggle="dropdown" aria-expanded="false">
                                <i class="fa-regular fa-circle-user"></i>
                                {{lcAuthUser.name}}
                            </button>
                            <ul class="dropdown-menu dropdown-menu-dark" aria-labelledby="dropdown-infor">
                                <li><a class="dropdown-item" href="/profile">Thông tin cá nhân</a></li>
                                <li><a class="dropdown-item" href="#" onclick="logout(); return false;"><i
                                            class="fa-solid fa-arrow-right-from-bracket"></i> Đăng xuất</a></li>
                            </ul>
                        </div>
                        {{else}}
                        <a href="/login">
                            <label for="nav-input" class="icon">
                                <i class="fa-regular fa-circle-user"></i>
                            </label>
                            <div class="text">
                                Đăng nhập
                            </div>
                        </a>


                        {{/if}}

                    </div>
                </div>
            </div>
        </div>
    </header>
    <ul class="menu-main">

        <div class="container">
            <label for="nav-input" class="menu-bar-tablet"><i class="fa-solid fa-bars"></i></label>
            <a href="/" class="menu-main__item">Trang chủ</a>
            <a class="menu-main__item">Sản phẩm</a>
            <a class="menu-main__item">Khuyến mại</a>
            <a class="menu-main__item">Liên hệ</a>
        </div>
    </ul>
    <!-- for Mobile -->
    <div>
        <ul class="nav__mobile__bottom">
            <label for="nav-input" class="item">
                <i class="fa-solid fa-bars"></i>
                <h4>Danh mục</h4>
            </label>
            <li class="item">
                <i class="fa-solid fa-store"></i>
                <h4>Sản phẩm</h4>
            </li>
            <li class="item active">
                <i class="fa-solid fa-house .icon"></i>
                <h4>Trang chủ</h4>
            </li>
            <li class="item">
                <i class="fa-solid fa-sack-dollar"></i>
                <h4>Khuyến mại</h4>
            </li>
            <li class="item">
                <i class="fa-solid fa-address-book"></i>
                <h4>Liên hệ</h4>
            </li>
        </ul>
    </div>

    <input type="checkbox" id="nav-input">
    <label for="nav-input" class="overlay"></label>
    <ul class="nav__mobile" title="close">
        <label for="nav-input" class="close">
            <i class="fa-solid fa-x"></i>
        </label>
        <div class="nav__content">
            <div class="branch">
                <a href="/"><img src="/assets/img/logo.png" alt="logo"></a>
            </div>
            <div class="user">
                {{#if lcAuthUser}}
                <div class="user__logged">
                    {{!-- <div class="login">
                        <i class="fa-solid fa-right-to-bracket"></i>
                        <p>{{lcAuthUser.name}}</p>

                    </div> --}}
                    <div class="logged">
                        <a href="/profile" class="logged__info">
                            <img src="/assets/img/avatar.png" alt="">
                            <p>Hi, <b>{{lcAuthUser.name}}</b></p>
                        </a>
                        <a href="#" onclick="logout(); return false;""><i title="Đăng xuất" class="fa-solid fa-arrow-right-from-bracket sign-out"></i></a>
                    </div>
                    
                </div>
                {{else}}
                <a href="/login">
                    <div class="login">
                        <i class="fa-solid fa-right-to-bracket"></i>
                        <p>Đăng nhập</p>
                    </div>
                </a>
                <div class="register">
                    <i class="fa-solid fa-user-plus"></i>
                    <p>Đăng ký</p>
                </div>
                {{/if}}
                
            </div>
            <!-- <div class="nav_navbar">
                <div class="nav_navbar__title">
                    <b>Thông tin</b>
                </div>
                <ul>
                    <li class="menu-main__item">Trang chủ</li>
                    <li class="menu-main__item">Sản phẩm</li>
                    <li class="menu-main__item">Khuyến mại</li>
                    <li class="menu-main__item">Liên hệ</li>
                </ul>
            </div> -->
            <div class="menu-category">
                <div class="menu-category__title">
                    <b>Danh mục sản phẩm</b>
                </div>
                <ul>

                    {{#each lcCategories}}
                    <li>
                        <a href="#" onclick="return false;" class="menu-category__item">
                            <i class="{{ico}}"></i>
                            <p>{{name}}</p>
                        </a>
                    </li>
                    {{/each}}


                </ul>
            </div>
        </div>
    </ul>

