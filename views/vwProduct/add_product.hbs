{{#section 'title'}}
<title>Thêm sản phẩm - BestGear</title>
{{/section}}
<form id="addProductForm" method="post" action="/products" enctype="multipart/form-data">
    <div class="add-product container">
        <h1 class="title">
            THÊM SẢN PHẨM
        </h1>
        <div class="name-category-product">
            <div class="name">
                <label for="add-product-name">Tên sản phẩm</label>
                <input type="text" id="title" name="title" placeholder="Nhập tên sản phẩm..." required>
            </div>
            <div class="category">
                <label for="add-product-category">Danh mục</label>
                <div class="dropdown dropdown-category">
                    <button class="btn btn-secondary dropdown-toggle" type="button" aria-haspopup="false"
                        id="add-product-category" data-bs-toggle="dropdown" aria-expanded="false">
                        Chọn danh mục
                    </button>
                    <input type="hidden" name="id_category" id="id_category" value="null">
                    <ul class="dropdown-menu" aria-labelledby="add-product-category">
                        {{#each lcCategories}}
                        <li>
                            <a href="#" onclick="return false;" class="dropdown-item">
                                <i class="{{ico}}"></i> {{name}}
                                <p style="display: none;" >{{id}}</p>
                            </a>
                        </li>
                        {{/each}}
                    </ul>
                </div>
                {{!-- <select name="add-product-category" id="add-product-category">
                    <option value="Laptop">Laptop</option>
                    <option value="Màn hình">Màn hình</option>
                    <option value="Bàn phím">Bàn phím</option>
                    <option value="Chuột">Chuột</option>
                    <option value="Tai nghe">Tai nghe</option>
                    <option value="Ghế Gaming">Ghế Gaming</option>
                    <option value="PC Gaming">PC Gaming</option>
                    <option value="Thiết bị mạng">Thiết bị mạng</option>
                    <option value="Phụ kiện">Phụ kiện</option>
                </select> --}}
            </div>
        </div>
        <div class="add-price">
            <div class="real-price price-item">
                <label for="price">Giá gốc</label>
                <input type="text"data-type="currency" id="price" name="price" placeholder="Nhập giá gốc..." required>
            </div>
            <div class="discount-price price-item">
                <label for="sale_price">Giá khuyến mại</label>
                <input type="text"data-type="currency" id="sale_price" name="sale_price" placeholder="Nhập giá khuyến mại..."
                    required>
            </div>
            <div class="inventory price-item">
                <label for="stock">Tồn kho</label>
                <input type="text" id="stock" placeholder="Nhập số lượng tồn kho..." name="stock" required>
            </div>
            <p class="overload-price">Giá khuyến mãi phải nhỏ hơn giá gốc</p>
    
        </div>
        <div class="product-image">
            <div class="thumbnail-product">
                <label class="font-bold" for="imgThumbnail">Thumbnail sản phẩm</label>
                <input id="imgThumbnail" name="thumb" type="file" class="file" accept="image/*">
                <p id="dangerThumb" style="color: red"></p>
            </div>
            <div class="sub-img-product">
                <label class="font-bold mt-3" for="imgsExta">Hình ảnh phụ</label>
                <input id="imgsExta" name="imgs" type="file" class="file"  accept="image/*" multiple>
                <p id="dangerExtra" style="color: red"></p>
            </div>
        </div>
        <div class="product-insurance">
            <label class="font-bold" for="textInsurance">Chính sách bảo hành</label>
            <textarea id="insurance" name="waranty" class="tiny_mce_insurance"></textarea>
        </div>
        <div class="product-desc">
            <label class="font-bold" for="textDescription">Mô tả chi tiết</label>
            <textarea id="description-add-product" name="description" class="tiny_mce"></textarea>
        </div>
        <div class="btn-add-product">
            <button type="submit">Thêm</button>
        </div>
    
    
    </div>
    </div>
    </div>
</form>

