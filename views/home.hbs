{{#section 'title'}}
<title>Trang chủ</title>
{{/section}}

<div class="main-content">
    <div class="container">
        <div class="menu-category">
            <div class="menu-category__title">
                <b>Danh mục sản phẩm</b>
            </div>
            <ul>
                {{#each lcCategories}}
                <li>
                    <a href="#" onclick="return false;" class="menu-category__item">
                        <i class="{{ico}}"></i>
                        <p>{{name}}</p>
                    </a>
                </li>
                {{/each}}

            </ul>
        </div>
        <div class="banner-content">
            <div class="slider-content owl-carousel owl-theme">
                <div class="item">
                    <img class="img-fluid" src="/assets/img/slideshow_1.jpg" alt="">
                </div>
                <div class="item">
                    <img class="img-fluid" src="/assets/img/slideshow_11.jpg" alt="">
                </div>
                <div class="item">
                    <img class="img-fluid" src="/assets/img/slideshow_4.jpg" alt="">
                </div>
            </div>
            <div class="slogan">
                <div class="slogan-content__item">
                    <div class="icon-item"><i class="fa-solid fa-gift"></i></div>
                    <p class="slogan-desc">Hàng ngàn khuyến mại</p>
                </div>
                <div class="slogan-content__item">
                    <div class="icon-item">
                        <i class="fa-solid fa-calendar-check"></i>
                    </div>
                    <p class="slogan-desc">Sản phẩm chất lượng</p>
                </div>
                <div class="slogan-content__item">
                    <div class="icon-item">
                        <i class="fa-solid fa-money-check-dollar"></i>
                    </div>
                    <p class="slogan-desc">Đổi trả sản phẩm lỗi</p>
                </div>

            </div>
        </div>
    </div>
</div>
