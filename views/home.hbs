        <div class="promotion-main__item">
            <a href="#"><img src="/assets/img/disount_1.jpg" alt="photo"></a>
        </div>
        <div class="promotion-main__item">
            <a href="#"><img src="/assets/img/disount_2.jpg" alt="photo"></a>
        </div>
        <div class="promotion-main__item">
            <a href="#"><img src="/assets/img/disount_3.jpg" alt="photo"></a>
        </div>
    </div>
</div>
<div class="product-main">
    <div class="container">
        <div class="product-main-wrap">
            <div class="best-selling">
                <h4 class="title">Bán chạy</h4>
                <div class="best-selling__content">
                    {{#each topSell}}
                    {{!-- <a href="/products/{{_id}}"> --}}

                        <a href="/products/{{_id}}" class="product-item">
                            <div class="thumbnail">
                                <span class="discount">{{percentSale}}%</span>
                                <img class="img-fluid" src="{{getImgLink thumb}}" alt="">
                                {{!-- <img class="img-fluid" src="/assets/img/gearvn-laptop-gaming-dell-g15-55.jpg"
                                    alt=""> --}}
                            </div>
                            <div class="product-desc">
                                <h4 class="name-product"><b>{{title}}</b></h4>
                                <div class="star-comment">
                                    <i class="fa-solid fa-star"></i>
                                    <i class="fa-solid fa-star"></i>
                                    <i class="fa-solid fa-star"></i>
                                    <i class="fa-solid fa-star"></i>
                                    <i class="fa-solid fa-star"></i>
                                </div>
                                <div class="sold-number">Đã bán: <b>{{format_number sold}}</b></div>
                                <div class="product-price"><b>{{format_number sale_price}} đ</b><span
                                        class="true-price">{{format_number price}} đ</span>
                                </div>
                            </div>
                        </a>

                        {{!-- </a> --}}
                    {{/each}}
                    <div class="more more__right"><i class="fa-solid fa-angle-right"></i></div>
                    <div class="more more__left"><i class="fa-solid fa-chevron-left"></i></div>
                </div>
            </div>
            <div class="selling">
                <ul class="nav nav-pills" id="pills-tab" role="tablist">
                    <li class="nav-item" role="presentation">
                        <button class="nav-link active " style="border-radius: 2rem 0 0 0 !important; "
                            id="pills-home-tab" data-bs-toggle="pill" data-bs-target="#pills-home" type="button"
                            role="tab" aria-controls="pills-home" aria-selected="true">Khuyến mại</button>
                    </li>
                    <li class="nav-item" role="presentation">
                        <button class="nav-link" id="pills-profile-tab" data-bs-toggle="pill"
                            data-bs-target="#pills-profile" type="button" role="tab" aria-controls="pills-profile"
                            aria-selected="false">Mới</button>
                    </li>
                </ul>
                <div class="tab-content" id="pills-tabContent">
                    <div class="tab-pane fade show active" id="pills-home" role="tabpanel"
                        aria-labelledby="pills-home-tab">
                        {{#each topDiscount}}
                        <div class="product-item product-item--col">
                            <a href="/products/{{_id}}">
                                <div class="thumbnail">
                                    <span class="discount">{{percentSale}}%</span>
                                    <div class="icon-action">
                                        <div class="icon-action__item"><i class="fa-solid fa-eye"></i></div>
                                        <div class="icon-action__item"><i class="fa-solid fa-basket-shopping"></i>
                                        </div>
                                        <div class="icon-action__item"><i class="fa-solid fa-heart"></i></div>
                                    </div>
                                    {{!-- <img class="img-fluid" src="/assets/img/gearvn-laptop-gaming-dell-g15-55.jpg"
                                        alt=""> --}}
                                    <img class="img-fluid" src="{{getImgLink thumb}}" alt="">
                                </div>
                                <div class="product-desc">
                                    <h4 class="name-product"><b>{{title}}</b></h4>
                                    <div class="star-comment">
                                        <i class="fa-solid fa-star"></i>
                                        <i class="fa-solid fa-star"></i>
                                        <i class="fa-solid fa-star"></i>
                                        <i class="fa-solid fa-star"></i>
                                        <i class="fa-solid fa-star"></i>
                                    </div>
                                    <div class="sold-number">Đã bán: <b>{{format_number sold}}</b></div>
                                    <div class="product-price"><b>{{format_number sale_price}} đ</b><span
                                            class="true-price">{{format_number price}} đ </span></b>
                                    </div>
                                </div>
                            </a>
                        </div>
                        {{/each}}
                    </div>
                    <div class="more more__right"><i class="fa-solid fa-angle-right"></i></div>
                    <div class="more more__left"><i class="fa-solid fa-chevron-left"></i></div>
                    <div class="tab-pane fade" id="pills-profile" role="tabpanel" aria-labelledby="pills-profile-tab">
                        {{#each topNew}}
                        <div class="product-item product-item--col">
                            <a href="/products/{{_id}}">
                                <div class="thumbnail">
                                    <span class="discount">{{percentSale}}%</span>
                                    <div class="icon-action">
                                        <div class="icon-action__item"><i class="fa-solid fa-eye"></i></div>
                                        <div class="icon-action__item"><i class="fa-solid fa-basket-shopping"></i>
                                        </div>
                                        <div class="icon-action__item"><i class="fa-solid fa-heart"></i></div>
                                    </div>
                                    <img class="img-fluid" src="{{getImgLink thumb}}" alt="">
                                </div>
                                <div class="product-desc">
                                    <h4 class="name-product"><b>{{title}}</b></h4>
                                    <div class="star-comment">
                                        <i class="fa-solid fa-star"></i>
                                        <i class="fa-solid fa-star"></i>
                                        <i class="fa-solid fa-star"></i>
                                        <i class="fa-solid fa-star"></i>
                                        <i class="fa-solid fa-star"></i>
                                    </div>
                                    <div class="sold-number">Đã bán: <b>{{format_number sold}}</b></div>
                                    <div class="product-price"><b>{{format_number sale_price}} đ</b><span
                                            class="true-price">{{format_number price}} đ</span></b>
                                    </div>
                                </div>
                            </a>
                        </div>
                        {{/each}}

                    </div>

                </div>
            </div>
        </div>
    </div>
</div>